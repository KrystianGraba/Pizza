<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/wprowadzanie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:orientation="vertical"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/podaj_rozmiar_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rozmiar_1_not" />

            <EditText
                android:id="@+id/rozmiar_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/h1"
                android:autofillHints="@string/h1"
                android:importantForAutofill="no"
                android:maxLength="3"
                android:inputType="number" />

            <TextView
                android:id="@+id/podaj_cene_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cena_1_not" />


            <EditText
                android:id="@+id/cena_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/h2"
                android:autofillHints="@string/h2"
                android:importantForAutofill="no"
                android:maxLength="5"
                android:inputType="numberSigned|numberDecimal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/podaj_rozmiar_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rozmiar_2_not" />

            <EditText
                android:id="@+id/rozmiar_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/h3"
                android:autofillHints="@string/h3"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="3"/>

            <TextView
                android:id="@+id/podaj_cene_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cena_2_not" />


            <EditText
                android:id="@+id/cena_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/h4"
                android:autofillHints="@string/h4"
                android:importantForAutofill="no"
                android:inputType="numberSigned|numberDecimal"
                android:maxLength="5"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:src="@drawable/pizza"
        android:contentDescription="@string/button_desc"/>

    <TextView
        android:id="@+id/wynik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAllCaps="true"
        android:textStyle="bold" />

</LinearLayout>